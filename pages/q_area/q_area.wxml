      <picker mode="date" value="{{dat1}}" start="1978-01-01" end="2030-1-23" bindchange="bindDateChange">
        <view>{{date1}}</view>
      </picker>
      <image src='../images/down.png'></image>
    </view>
  </view>
  <view class='data_wrap'>
    <view>结束：</view>
