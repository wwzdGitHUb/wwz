.success text{font-size: 28rpx;padding: 0 20rpx}
.success text text{color: #e51c23;padding: 0rpx;}
.success view{font-size: 30rpx;color: #fff;background: #e51c23;width: 30%;padding: 32rpx 0px;text-align: center}
.wraplistlistdata view{padding-left: 200rpx}
.wraplist input{width: 540rpx;font-size: 30rpx;color: #000;display: inline-block;margin-left: 10rpx;}
.wraplistinput{display: flex;justify-content: initial;}

