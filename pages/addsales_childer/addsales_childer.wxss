page{background: #fff}
.wraplist{display: flex;justify-content: space-between;box-sizing: border-box;padding: 20rpx 20rpx;font-size: 30rpx;color: #333;border-bottom: 2rpx solid #ddd;align-items: center}
.wraplist image{display: inline-block;width: 28rpx;height: 28rpx;}
.wraplistlist{display: flex;align-items: center;}
.wraplistlist2 text{display: inline-block;margin-left: 10rpx;}
.wraplistlistdata{display: inline-block;position: relative;top: -2rpx;}
.counts{box-sizing: border-box;padding: 5rpx 20rpx;border-bottom: 1rpx solid #ddd; font-size: 30rpx;color: #333;}
.counts view{padding: 10rpx 0rpx;}
.counts_view{display: flex;justify-content: space-between;color: #333;font-size: 28rpx;}
.counts_view text:nth-child(2){color: #1ea0f7}
.counts_view2 text:nth-child(1){color: #e51c23}
