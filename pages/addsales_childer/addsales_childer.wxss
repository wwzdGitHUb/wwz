.titlelayer{text-align: center;box-sizing: border-box;padding: 20rpx 0rpx;}
.demand2{display: flex;align-items: center;}
.demand2 input{position: relative;top: 0rpx;border-bottom: 1rpx solid #ddd}
.titletext2,.demand2{padding: 10rpx 0rpx}
